@model IList<ProductOverviewModel>
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.RecentlyViewedProducts").Text);
}

@using SmartStore.Web.Models.Catalog;

<div class="page recently-viewed-products-page">
    <div class="page-title">
        <h1>@T("Products.RecentlyViewedProducts")</h1>
    </div>
    <div class="page-body">
        @if (Model.Count > 0)
        {
            <div class="card-deck card-cols-sm-1 card-cols-md-2 card-cols-lg-3 product-grid">
                @foreach (var product in Model)
                {
                    <article class="card card-block card-shadow text-xs-center">
                        @Html.Partial("_ProductBox", product)
                    </article>
                }
            </div>
        }
    </div>
</div>
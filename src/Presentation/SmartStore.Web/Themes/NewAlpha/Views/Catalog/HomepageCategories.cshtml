@model IList<CategoryModel>

@using SmartStore.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="card-deck card-cols-sm-1 card-cols-md-2 card-cols-lg-3 category-grid home-page-category-grid">
        @foreach (var item in Model)
        {
            <article class="item-box card card-block card-shadow text-xs-center">
                <div class="category-item homepage-category-item">
                    <h2 class="card-title">
                        <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">@item.Name</a>
                    </h2>
                    <div class="picture">
                        @if (item.PictureModel.ImageUrl.HasValue())
                        {
                            <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                            </a>
                        }
                    </div>
                </div>
            </article>
        }
    </div>
}

<?xml version="1.0" encoding="utf-8" ?>
<Theme title="Flex" supportRTL="false" previewText="'Flex' default theme" author="SmartStore AG" version="1.0">

  <Vars>
    <!-- Common colors -->
    <Var name="gray-dark" type="Color">#292b2c</Var>
    <Var name="gray" type="Color">#464a4c</Var>
    <Var name="gray-light" type="Color">#999</Var>
    <Var name="gray-lighter" type="Color">#eceeef</Var>
    <Var name="gray-lightest" type="Color">#f7f7f9</Var>

    <Var name="red" type="Color">#f44336</Var>
    <Var name="orange" type="Color">#ff9800</Var>
    <Var name="yellow" type="Color">#ffeb3b</Var>
    <Var name="green" type="Color">#4caf50</Var>
    <Var name="blue" type="Color">#0275d8</Var>
    <Var name="bluegrey" type="Color">#78909c</Var>
    <Var name="indigo" type="Color">#3f51b5</Var>
    <Var name="teal" type="Color">#009688</Var>
    <Var name="pink" type="Color">#ff5b77</Var>
    <Var name="purple" type="Color">#9c27b0</Var>

    <!-- Brand Colors -->
    <Var name="brand-primary" type="Color">$indigo</Var>
    <Var name="brand-warning" type="Color">$orange</Var>
    <Var name="brand-danger" type="Color">$red</Var>
    <Var name="brand-info" type="Color">$bluegrey</Var>
    <Var name="brand-success" type="Color">$green</Var>
    <Var name="brand-inverse" type="Color">$gray-dark</Var>
    
    <!-- Main site colors -->
    <Var name="body-bg" type="Color">#fff</Var>
    <Var name="body-color" type="Color">#333</Var>
    <Var name="link-color" type="Color">#08c</Var>
    
    <!-- Common Colors -->
    <Var name="SiteBackground" type="Color">#eaf0f4</Var>
    <Var name="BodyBackground" type="Color">#fff</Var>
    <Var name="TextColor" type="Color">#444</Var>
    <Var name="LinkColor" type="Color">#08c</Var>
    <Var name="BoxBackground" type="Color">#fff</Var>
    
    <!-- Common Font -->
    <!-- e.g.: Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic -->
    <Var name="google-font-1" type="String"></Var>
    <Var name="google-font-2" type="String"></Var>
    <Var name="google-font-3" type="String"></Var>
    
    <Var name="font-family-sans-serif" type="String">-apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif</Var>
    <Var name="font-family-monospace" type="String">Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace</Var>
    <Var name="font-size-base" type="String">0.875rem</Var>
    <Var name="font-size-lg" type="String">1rem</Var>
    <Var name="font-size-sm" type="String">0.8125rem</Var>
    <Var name="font-size-xs" type="String">0.75rem</Var>

    <Var name="font-weight-light" type="String">300</Var>
    <Var name="font-weight-normal" type="String">normal</Var>
    <Var name="font-weight-medium" type="String">600</Var>
    <Var name="font-weight-bold" type="String">bold</Var>

    <!-- Common Headings -->
    <Var name="HeadingsFontFamily" type="String">'Segoe UI Semibold', 'Segoe UI', Tahoma, 'Helvetica Neue', Helvetica, Arial, 'sans-serif'</Var>
    <Var name="HeadingsFontWeight" type="String">600</Var>
    <Var name="HeadingsColor" type="Color">inherit</Var>

    <Var name="PageTitleFontFamily" type="String">'Segoe UI Light', 'Segoe UI', Arial, Helvetica, 'sans-serif'</Var>
    <Var name="PageTitleFontWeight" type="String">100</Var>
    <Var name="PageTitleColor" type="Color">#3a87ad</Var>
    
    <!-- Tables-->
    <Var name="TableBackground" type="Color">transparent</Var>
    <Var name="TableBackgroundAccent" type="Color">#f9f9f9</Var>
    <Var name="TableBackgroundHover" type="Color">#f5f5f5</Var>
    <Var name="TableBorder" type="Color">#ddd</Var>
  
    <!-- Buttons -->
    <Var name="BtnBackground" type="Color">#fff</Var>
    <Var name="BtnPrimaryBackground" type="Color">#0088cc</Var>
    <Var name="BtnInfoBackground" type="Color">#5bc0de</Var>
    <Var name="BtnSuccessBackground" type="Color">#62c462</Var>
    <Var name="BtnWarningBackground" type="Color">#fbb450</Var>
    <Var name="BtnDangerBackground" type="Color">#ee5f5b</Var>
    <Var name="BtnInverseBackground" type="Color">#444</Var>
    
    <!-- Shopbar -->
    <Var name="ShopBarBackgroundColor" type="Color">#fff</Var>
    <Var name="ShopBarBorderColor" type="Color">#abc2d1</Var>
    <Var name="ShopBarTextColor" type="Color">#696969</Var>
    <Var name="ShopBarIconColor" type="Color">#d2d2d2</Var>
    <Var name="shopbar-label" type="Select#shopbar-labels">warning</Var>
    
    <!-- Megamenu -->
    <Var name="inverse-navbar" type="Boolean">false</Var>
    <Var name="megamenu-bg" type="Color">$gray-lightest</Var>
    <Var name="NavbarHeight" type="String">38px</Var>
    <Var name="NavbarBackgroundHighlight" type="Color">#fff</Var>
    
    <Var name="NavbarText" type="Color">#717171</Var>
    <Var name="NavbarLinkColor" type="Color">#717171</Var>
    <Var name="NavbarLinkColorHover" type="Color">#1a1a1a</Var>
    <Var name="NavbarLinkColorActive" type="Color">#555</Var>
    

    <Var name="NavbarInverseBackground" type="Color">#222</Var>
    <Var name="NavbarInverseBackgroundHighlight" type="Color">#666</Var>
    <Var name="NavbarInverseBorder" type="Color">#555</Var>

    <Var name="NavbarInverseText" type="Color">#dadada</Var>
    <Var name="NavbarInverseLinkColor" type="Color">#dadada</Var>
    <Var name="NavbarInverseLinkColorHover" type="Color">#fff</Var>
    <Var name="NavbarInverseLinkColorActive" type="Color">#fff</Var>

    <!-- Header -->
    <Var name="HeaderLinkColor" type="Color">#0088cc</Var>
    <Var name="HeaderHoverColor" type="Color">#005580</Var>
    <Var name="HeaderIconColor" type="Color">#bbcfdb</Var>

    <Var name="ChooserBorderColor" type="Color">#cfdde6</Var>
    <Var name="ChooserBackgroundColor" type="Color">transparent</Var>
    <Var name="ChooserActiveStateColor" type="Color">#cfdde6</Var>
    <Var name="ChooserFontColor" type="Color">#888</Var>
    
    <!-- Footer -->
    <Var name="FooterBackground" type="Color">#555</Var>
    <Var name="FooterHeading" type="Color">#888</Var>
    <Var name="FooterFontColor" type="Color">#888</Var>
    <Var name="FooterLinkColor" type="Color">#aaa</Var>
    <Var name="FooterRadius" type="String">0 0 0 0</Var>

    <!-- Container -->
    <Var name="ContainerRadius" type="String">3px</Var>
    <Var name="ContainerHeaderBackground" type="Color">#e1e9f0</Var>
    <Var name="ContainerHeaderFontColor" type="Color">#555</Var>
    <Var name="ContainerHeaderHeight" type="String">17px</Var>
    <Var name="ContainerBodyBackground" type="Color">#fff</Var>
    <Var name="ContainerBodyFontColor" type="Color">#555</Var>
    <Var name="ContainerBodyLinkColor" type="Color">#888</Var>
    <Var name="ContainerBorder" type="Color">#d6e0e6</Var>

    <!-- Misc -->
    <Var name="ItemBoxBoxShadowColor" type="Color">#f89406</Var>
    <Var name="SimpleBoxHeaderColor" type="Color">#ddd</Var>
    <Var name="CheckoutProgressBackgroundColor" type="Color">#f5f5f5</Var>
    <Var name="AlternateListItemBackgroundColor" type="Color">#f5f5f5</Var>
    <Var name="ProductListsPriceColor" type="Color">#468847</Var>
    <Var name="ProductDetailPriceColor" type="Color">#f89406</Var>
    
    <!-- Slider -->
    <Var name="SliderUseRadialBg" type="Boolean">true</Var>
    <Var name="SliderBgSlide" type="Select#BgSlideBehaviours">on</Var>
    <Var name="SliderBackgroundColor" type="Color">#2786ce</Var>
    <Var name="SliderTitleColor" type="Color">#fff</Var>
    <Var name="SliderTitleFontFamily" type="String">'Segoe UI Light', 'Segoe UI', Arial, sans-serif</Var>
    <Var name="SliderTitleFontWeight" type="String">100</Var>
    <Var name="SliderInfoColor" type="Color">#fff</Var>
    <Var name="SliderInfoFontFamily" type="String">inherit</Var>
    <Var name="SliderInfoFontWeight" type="String">inherit</Var>

    <!-- Paginator -->
    <Var name="PaginationBackground" type="Color">#fff</Var>
    <Var name="PaginationBorder" type="Color">#ddd</Var> 
    <Var name="PaginationActiveBackground" type="Color">#f5f5f5</Var>

    <!-- Layout -->
    <Var name="GridSettings" type="Select#GridSettings">5/14/5</Var>
    <Var name="GridColumnWidth" type="String">20px</Var> 
    <Var name="GridGutterWidth" type="String">20px</Var>
    <Var name="GridColumnWidth1200" type="String">20px</Var>
    <Var name="GridGutterWidth1200" type="String">30px</Var>   

    <!-- Forms --> 
    <Var name="InputBackground" type="Color">#fff</Var>
    <Var name="InputBorder" type="Color">#ccc</Var>
    <Var name="InputBorderRadius" type="String">2px</Var>
    <Var name="InputDisabledBackground" type="Color">#eee</Var>
    <Var name="FormActionsBackground" type="Color">#f5f5f5</Var>

    <!-- Dropdowns -->
    <Var name="DropdownBackground" type="Color">#fff</Var>
    <Var name="DropdownBorder" type="Color">#bbb</Var>
    <Var name="DropdownDividerTop" type="Color">#e5e5e5</Var>
    <Var name="DropdownDividerBottom" type="Color">#fff</Var>
    
    <Var name="DropdownLinkColor" type="Color">#333</Var>
    <Var name="DropdownLinkColorHover" type="Color">#fff</Var>
    <Var name="DropdownLinkColorActive" type="Color">#fff</Var>
    <Var name="DropdownLinkBackgroundActive" type="Color">#f9980f</Var>
    <Var name="DropdownLinkBackgroundHover" type="Color">#f9980f</Var>     
    
  </Vars>

  <Selects>
    <Select id="shopbar-labels">
      <Option>default</Option>
      <Option>primary</Option>  
      <Option>info</Option>
      <Option>success</Option>
      <Option>warning</Option>
      <Option>danger</Option>
    </Select>

    <Select id="GridSettings">
      <Option>5/14/5</Option>
      <Option>6/12/6</Option>
      <Option>7/12/5</Option>
      <Option>7/11/6</Option>
    </Select>

    <Select id="BgSlideBehaviours">
      <Option>off</Option>
      <Option>on</Option>
      <Option>opposite</Option>
    </Select>
  </Selects>
    
</Theme>
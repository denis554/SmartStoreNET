        @ThemeVarEditor("btn-warning-bg")
        @ThemeVarEditor("btn-warning-border")

        @ThemeVarEditor("btn-danger-color", "Danger")
        @ThemeVarEditor("btn-danger-bg")
        @ThemeVarEditor("btn-danger-border")
    </table>
}

@helper TabStates()
{
    <table class="adminContent">
        @ThemeVarEditor("state-success-text", "Success")
        @ThemeVarEditor("state-success-bg")
        @ThemeVarEditor("state-success-border")

        @ThemeVarEditor("state-info-text", "Info")
        @ThemeVarEditor("state-info-bg")
        @ThemeVarEditor("state-info-border")

        @ThemeVarEditor("state-warning-text", "Warning")

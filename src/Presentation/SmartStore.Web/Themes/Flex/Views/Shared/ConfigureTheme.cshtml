{
    <table class="adminContent">
        @ThemeVarEditor("btn-primary-color", "Primary")
        @ThemeVarEditor("btn-primary-bg")
        @ThemeVarEditor("btn-primary-border")

        @ThemeVarEditor("btn-secondary-color", "Secondary")
        @ThemeVarEditor("btn-secondary-bg")
        @ThemeVarEditor("btn-secondary-border")

        @ThemeVarEditor("btn-info-color", "Info")

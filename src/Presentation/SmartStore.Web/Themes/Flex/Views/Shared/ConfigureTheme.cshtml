		@ThemeVarEditor("blue")
		@ThemeVarEditor("bluegrey")
		@ThemeVarEditor("indigo")
		@ThemeVarEditor("teal")
		@ThemeVarEditor("pink")
		@ThemeVarEditor("purple")

		@ThemeVarEditor("brand-primary", "Brand Colors")

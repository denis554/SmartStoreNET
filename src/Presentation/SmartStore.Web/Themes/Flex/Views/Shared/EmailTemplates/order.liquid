<!-- Order Items -->
<table class="w-100 brd order-items" cellpadding="10">
	<thead>
		<tr>
			<th class="text-lg" style="padding-right: 0" colspan="2" nowrap>{% T 'Order.Product(s).Item' %}</th>
			<th class="text-lg" style="padding-right: 0" nowrap>{% T 'Order.Product(s).Price' %}</th>
			<th class="text-lg" style="padding-right: 0" nowrap>{% T 'Order.Product(s).Quantity' %}</th>
			<th class="text-lg" nowrap>{% T 'Order.Product(s).Total' %}</th>
		</tr>
	</thead>
	<tbody>
		{% for item in Order.Items %}
			{% assign product = item.Product %}
			<tr>
				<td style="border-top: 1px solid #eceeef; padding-right: 0" align="center">
					{% if product.Thumbnail %}
						{% assign thumb = product.Thumbnail %}
					    <img src="{{ thumb.Src }}" alt="{{ thumb.Alt }}"
							{% if thumb.Width %}width="{{ thumb.Width }}"{% endif %}
							{% if thumb.Height %}height="{{ thumb.Height }}"{% endif %}
						/>
					{% endif %}				
				</td>
				<td style="border-top: 1px solid #eceeef; padding-right: 0; line-height: 1.3em" width="70%">
					<div class="m-b-2">
						<a class="order-item-link" href="{{ item.Product.Url }}">
							{{ product.Name }}
						</a>
						{% if item.DownloadUrl %}
							(<a href="{{ item.DownloadUrl }}">{% T 'Common.Download' %}</a>)
						{% endif %}	
						{% if product.Sku %}
							<div class="text-sm">
								{% T 'Order.Product(s).SKU' %}: <span class="text-muted">{{ product.Sku }}</span>
							</div>
						{% endif %}						
					</div>
					{% if product.DeliveryTime %}
						<div class="text-sm">
							{% T 'Products.DeliveryTime' %} <span style="color: {{ product.DeliveryTime.Color }}">{{ product.DeliveryTime.Name }}</span>
						</div>
					{% endif %}
					{% if item.AttributeDescription %}
						<div class="text-sm text-muted m-t-2">
							{{ item.AttributeDescription }}
						</div>
					{% endif %}		
				</td>
				<td style="border-top: 1px solid #eceeef; padding-right: 0" nowrap>
					{{ item.UnitPrice }}
				</td>
				<td style="border-top: 1px solid #eceeef; padding-right: 0" nowrap>
					{{ item.Qty }}
					{% if product.QtyUnit %}
						<span class="text-xs">{{ product.QtyUnit }}</span>
					{% endif %}
				</td>
				<td style="border-top: 1px solid #eceeef" class="text-right" nowrap>
					<b>{{ item.LineTotal }}</b>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>

<!-- Order Summary -->
{% assign totals = Order.Totals %}
<table class="w-100 brd bg-light order-summary m-b-4" cellpadding="10" style="border-top: 0">
	<tr>
		<!-- Checkout Attributes -->
		<td width="50%">
			{% if Order.CheckoutAttributes %}
				{{ Order.CheckoutAttributes }}
			{% endif %}
		</td>
		
		<!-- Totals -->
		<td width="50%">
			<table class="w-100">
				<!-- Subtotal -->
				<tr>
					<td width="60%" nowrap>{% T 'Order.SubTotal' %}:</td>
					<td width="40%" align="right" nowrap>{{ totals.SubTotal }}</td>
				</tr>
				
				<!-- Subtotal Discount -->
				{% if totals.SubTotalDiscount %}
				<tr>
					<td width="60%" style="padding-top: 5px" nowrap>{% T 'Order.SubTotalDiscount' %}:</td>
					<td width="40%" style="padding-top: 5px" align="right" class="text-success" nowrap>{{ totals.SubTotalDiscount }}</td>
				</tr>
				{% endif %}

				<!-- Shipping -->
				{% if totals.Shipping %}
				<tr>
					<td width="60%" style="padding-top: 5px" nowrap>{% T 'Order.Shipping' %}:</td>
					<td width="40%" style="padding-top: 5px" align="right" class="text-danger" nowrap>{{ totals.Shipping }}</td>
				</tr>
				{% endif %}		
					
				<!-- Payment -->
				{% if totals.Payment %}
				<tr>
					<td width="60%" style="padding-top: 5px" nowrap>{% T 'Order.PaymentMethodAdditionalFee' %}:</td>
					<td width="40%" style="padding-top: 5px" align="right" class="text-danger" nowrap>{{ totals.Payment }}</td>
				</tr>
				{% endif %}
				
				<!-- Tax Rates -->
				{% if totals.TaxRates %}
					{% for rate in totals.TaxRates %}
						<tr>
							<td width="60%" style="padding-top: 5px" nowrap>{{ rate.Rate }}:</td>
							<td width="40%" style="padding-top: 5px" align="right" nowrap>{{ rate.Value }}</td>
						</tr>
					{% endfor %}
				{% endif %}
				</tr>
				
				<!-- Tax -->
				{% if totals.Tax %}
				<tr>
					<td width="60%" style="padding-top: 5px" nowrap>{% T 'Order.Tax' %}:</td>
					<td width="40%" style="padding-top: 5px" align="right" nowrap>{{ totals.Tax }}</td>
				</tr>
				{% endif %}
				
				<!-- Order Total Discount -->
				{% if totals.Discount %}
				<tr>
					<td width="60%" style="padding-top: 5px" nowrap>{% T 'Order.TotalDiscount' %}:</td>
					<td width="40%" style="padding-top: 5px" align="right" class="text-success" nowrap>{{ totals.Discount }}</td>
				</tr>
				{% endif %}
				
				<!-- Gift Cards -->
				{% if totals.GiftCardUsage %}
					{% for gc in totals.GiftCardUsage %}
						<tr>
							<td width="60%" style="padding-top: 5px" nowrap>{{ gc.GiftCard }}:</td>
							<td width="40%" style="padding-top: 5px" align="right" nowrap>{{ gc.UsedAmount }}</td>
						</tr>
					{% endfor %}
				{% endif %}
				</tr>
				
				<!-- Redeemed Reward Points-->
				{% if totals.RedeemedRewardPoints %}
					{% for rp in totals.RedeemedRewardPoints %}
						<tr>
							<td width="60%" style="padding-top: 5px" nowrap>{{ rp.Title }}:</td>
							<td width="40%" style="padding-top: 5px" align="right" nowrap>{{ rp.Amount }}</td>
						</tr>
					{% endfor %}
				{% endif %}
				</tr>
				
				<!-- Rounding Difference -->
				{% if totals.RoundingDiff %}
				<tr>
					<td width="60%" style="padding-top: 5px" nowrap>{% T 'ShoppingCart.Totals.Rounding' %}:</td>
					<td width="40%" style="padding-top: 5px" align="right" nowrap>{{ totals.RoundingDiff }}</td>
				</tr>
				{% endif %}
				
				<!-- TOTAL -->
				<tr>
					<td width="60%" class="text-lg" style="padding-top: 5px" nowrap><b>{% T 'Order.OrderTotal' %}:</b></td>
					<td width="40%" class="text-lg" style="padding-top: 5px" align="right" nowrap><b>{{ totals.Total }}</b></td>
				</tr>
			</table>
		</td>
	</td>
</table>











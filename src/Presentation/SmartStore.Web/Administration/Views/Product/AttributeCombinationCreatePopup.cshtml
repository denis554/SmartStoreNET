@{
    Layout = "~/Administration/Views/Shared/_AdminPopupLayout.cshtml";
}
@model ProductVariantAttributeCombinationModel
@{    
    //page title
    ViewBag.Title = T("Admin.Catalog.Products.Variants.ProductVariantAttributes.AttributeCombinations.AddTitle").Text;
}

@*we add enctype = "multipart/form-data" because "File upload" attribute control type requries it*@
@using (Html.BeginForm("AttributeCombinationCreatePopup", "Product",
    new RouteValueDictionary(new { productId = Model.ProductId, btnId = ViewBag.btnId, formId = ViewBag.formId }),
    FormMethod.Post,
    new Dictionary<string, Object> { { "enctype", "multipart/form-data" } }))
{
    <div class="section-header">
        <div class="title">
            @T("Admin.Catalog.Products.Variants.ProductVariantAttributes.Attributes.Values.AddNew")
        </div>
        <div class="options">
            <button type="submit" id="save" name="save" value="save" class="btn btn-primary">
                <i class="icon-ok"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdateAttributeCombinationPopup", Model)
}
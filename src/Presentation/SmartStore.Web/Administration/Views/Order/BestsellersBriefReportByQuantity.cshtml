@model IList<BestsellersReportLineModel>
@using Telerik.Web.Mvc.UI

<div class="widget widget-table">
    
    <div class="widget-header">
        <i class="icon-star"></i>
        <h3>@T("Admin.SalesReport.BestSellers.ByQuantity")</h3>
    </div>
    
    <div class="widget-content">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@T("Admin.SalesReport.Bestsellers.Fields.Name")</th>
                    <th>@T("Admin.SalesReport.Bestsellers.Fields.TotalQuantity")</th>
                    <th>@T("Admin.SalesReport.Bestsellers.Fields.TotalAmount")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(@x.ProductName, "Edit", "Product", new { id = x.ProductId }, new { })
                        </td>
                        <td>@x.TotalQuantity</td>
                        <td>@x.TotalAmount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

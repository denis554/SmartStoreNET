@model IList<OrderAverageReportLineSummaryModel>

@{ 
	var textColors = new string[] { "text-danger", "text-warning", "text-success", "text-light" };
}

<div class="stats-today row mb-4">
	<div class="col">
		<h1 class="stats-today-title display-4 m-0">@T("Admin.SalesReport.Average.SumTodayOrders")</h1>
	</div>

	@for (int i = 0; i < Model.Count; ++i)
	{
		var x = Model[i];
		<div class='col-auto stats-today-item@(i == 0 ? " ml-auto" : "")'>
			<div class="stats-today-item-label">@x.OrderStatus</div>
			<div class="stats-today-item-value @textColors[i]">@x.SumTodayOrders</div>
		</div>
	}
</div>

<div class="card card-shadow mb-4"> 
    <h6 class="card-header font-weight-medium">
		<i class="fa fa-signal pr-2"></i>
		@T("Admin.SalesReport.Average")
    </h6>

	<div class="table-responsive">
		<table class="table table-striped m-0">
			<thead>
				<tr>
					<th>@T("Admin.SalesReport.Average.OrderStatus")</th>
					<th>@T("Admin.SalesReport.Average.SumThisWeekOrders")</th>
					<th>@T("Admin.SalesReport.Average.SumThisMonthOrders")</th>
					<th>@T("Admin.SalesReport.Average.SumThisYearOrders")</th>
					<th>@T("Admin.SalesReport.Average.SumAllTimeOrders")</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var x in Model)
				{
					<tr>
						<td>
							@if (x.Url.HasValue())
							{
								<a href="@x.Url">@x.OrderStatus</a>
							}
							else
							{
								@x.OrderStatus
							}
						</td>
						<td>@x.SumThisWeekOrders</td>
						<td>@x.SumThisMonthOrders</td>
						<td>@x.SumThisYearOrders</td>
						<td>@x.SumAllTimeOrders</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>


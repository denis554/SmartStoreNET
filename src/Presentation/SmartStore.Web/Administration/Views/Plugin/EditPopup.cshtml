@{
    Layout = "~/Administration/Views/Shared/_AdminPopupLayout.cshtml";
}
@model PluginModel
@{    
    //page title
    ViewBag.Title = T("Admin.Configuration.Plugins.EditDetails").Text;
}
@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            @T("Admin.Configuration.Plugins.EditDetails")
        </div>
        <div class="options">
            <button type="submit" name="save" value="save" class="btn btn-primary"><i class="fa fa-check"></i>&nbsp;@T("Admin.Common.Save")</button>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdatePlugin", Model)
}
@model CustomerRoleModel
@{
    ViewBag.Title = T("Admin.Customers.CustomerRoles.EditCustomerRoleDetails").Text;
}
@using Telerik.Web.Mvc.UI
@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            @T("Admin.Customers.CustomerRoles.EditCustomerRoleDetails") - @Model.Name @Html.ActionLink("(" + T("Admin.Customers.CustomerRoles.BackToList") + ")", "List")
        </div>
        <div class="options">
            <button type="submit" name="save" value="save" class="btn btn-warning">

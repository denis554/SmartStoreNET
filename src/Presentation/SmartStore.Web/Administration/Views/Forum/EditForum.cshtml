@model ForumModel
@{
    ViewBag.Title = T("Admin.ContentManagement.Forums.Forum.EditForum").Text;
}
@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            <i class="fa fa-users"></i>
            @T("Admin.ContentManagement.Forums.Forum.EditForum") - @Model.Name  @Html.ActionLink(String.Format("({0})", T("Admin.ContentManagement.Forums.Forum.BackToList")), "List")
        </div>
        <div class="options">
			@{ Html.RenderWidget("admin_button_toolbar_before"); }

            <button type="submit" name="save" value="save" class="btn btn-warning">
				<i class="fa fa-check"></i>
				<span>@T("Admin.Common.Save")</span>
			</button>
            <button type="submit" name="save" value="save-continue" class="btn btn-secondary">
				<span>@T("Admin.Common.Save")</span>
			</button>
            <button type="submit" name="forum-delete" value="forum-delete" id="forum-delete" class="btn btn-danger">
				<i class="fa fa-trash-o"></i>
				<span>@T("Admin.Common.Delete")</span>
			</button>

			@{ Html.RenderWidget("admin_button_toolbar_after"); }

        </div>
    </div>

    Html.RenderPartial("_CreateOrUpdateForum", Model);
}
@Html.DeleteConfirmation("DeleteForum", "forum-delete")

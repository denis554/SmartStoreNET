@model IEnumerable<WidgetModel>
@{    
   ViewBag.Title = T("Admin.ContentManagement.Widgets").Text;
}

<div class="section-header">
   <div class="title">
       <i class="fa fa-plus-square"></i>
       @T("Admin.ContentManagement.Widgets")
   </div>
</div>

<div>
	@Html.ProviderList(Model,
		@<div>
			<a style="min-width: 150px" class='btn btn-@(item.IsActive ? "secondary btn-to-danger" : "success")' href='@Url.Action("ActivateProvider", new { systemName = item.SystemName, activate = !item.IsActive })'>
				@T("Admin.Common.{0}".FormatInvariant(item.IsActive ? "Deactivate" : "Activate"))
			</a>
		</div>)
</div>

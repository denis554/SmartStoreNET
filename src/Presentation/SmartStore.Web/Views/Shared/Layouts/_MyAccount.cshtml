@{
    Layout = "_Layout";
    Html.AddBodyCssClass("myaccount-page");
}

@section left
{
	@{ Html.RenderAction("MyAccountMenu", new { selectedItem = ViewBag.PageClassToken }); }
}

<div class="page page-myaccount page-myaccount-@ViewBag.PageClassToken">
	<div class="page-title">
		<h1 class="h3">@ViewBag.PageTitle</h1>
	</div>

	<div class="page-body">
		@RenderBody()
	</div>
</div>


@model PasswordRecoveryConfirmModel
@using SmartStore.Web.Models.Customer;
@{
    Layout = "_Layout";
    
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
}

<div class="page password-recovery-page">
    <div class="page-title">
        <h1 class="h3">@T("Account.PasswordRecovery")</h1>
    </div>

    <div class="page-body row">
        @if (!String.IsNullOrEmpty(Model.Result))
        {
            <div class="col-12">
                <div class="alert alert-success">
                    @Model.Result
                </div>
            </div>
        }

        @if (!Model.SuccessfullyChanged)
        {
            using (Html.BeginForm( "Customer", "PasswordRecoveryConfirm", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="container">
                    <fieldset class="content-group">
                        @Html.ControlGroupFor(model => model.NewPassword, editorType: InputEditorType.Password, required: true, breakpoint: "md")
                        @Html.ControlGroupFor(model => model.ConfirmNewPassword, editorType: InputEditorType.Password, required: true, breakpoint: "md")
                    </fieldset>

                    <div class="form-group row">
                        <div class="col">
                            <input type="submit" name="set-password" class="btn btn-danger" value="@T("Account.PasswordRecovery.ChangePasswordButton")" />
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@{ 
	var labelStyle = GetThemeVariable<string>("shopbar-label", "warning");
}

<div class="ocm-home-layer">

    <div class="offcanvas-menu-header">
        <div class="text-xs-right">
            <button class="btn btn-secondary btn-flat btn-to-danger btn-lg btn-icon offcanvas-closer fs-h2" style="border-radius: 0">
                &#215;
            </button>
        </div>

        <ul class="nav nav-tabs nav-tabs-line row no-space flex-nowrap" role="tablist">
            <li class="nav-item col-xs">
                <a id="category-tab" class="nav-link" data-toggle="tab" href="#ocm-categories" role="tab" data-url="@Url.Action("OffCanvasMenuCategories", "Catalog")">
                    <span class="title">@T("Offcanvas.Menu.Categories")</span>
                </a>
            </li>
            <li class="nav-item col-xs">
                <a id="manufacturer-tab" class="nav-link" data-toggle="tab" href="#ocm-manufacturers" role="tab" data-url="@Url.Action("OffCanvasMenuManufacturer", "Catalog")">
                    <span class="title">@T("Offcanvas.Menu.Brands")</span>
                </a>
            </li>
            <li class="nav-item col-xs">
                <a id="help-tab" class="nav-link" data-toggle="tab" href="#ocm-help" role="tab" data-url="@Url.Action("OffCanvasMenuHelp", "Catalog")" data-initialized="false">
                    <span class="title">@T("Offcanvas.Menu.Help")</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="tab-content">
        <div class="tab-pane fade" id="ocm-categories" role="tabpanel"></div>

        <div class="tab-pane fade" id="ocm-manufacturers" role="tabpanel"></div>

        <div class="tab-pane fade" id="ocm-help" role="tabpanel"></div>
    </div>

    <div class="offcanvas-menu-footer container">

        <div class="row sm-gutters">

            <div class="col-xs">
                <div id="ocm-currency-selector" class="mf-dropdown">
                    <button class="btn btn-secondary btn-labeled icon-right btn-block">
                        <span></span>
                        <b><i class="fa fa-caret-down"></i></b>
                    </button>
                    <select class="form-control noskin" data-qname="o" title="test"></select>
                </div>
            </div>

            <div class="col-xs">
                <div id="ocm-language-selector" class="mf-dropdown">
                    <button class="btn btn-secondary btn-labeled icon-right btn-block">
                        <span></span>
                        <b><i class="fa fa-caret-down"></i></b>
                    </button>
                    <select class="form-control noskin"></select>
                </div>
            </div>
        </div>
    </div>
</div>
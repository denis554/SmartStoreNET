@model SmartStore.Web.Models.Common.FormDataProcessingConsentModel
@{
	Layout = "";
}

<div class="form-group row">
	<div class="col form-control-plaintext">
		<div class="form-check">
			@Html.CheckBoxFor(model => model.DataProcessingConsent, new { @class = "form-check-input" })
			<label class="form-check-label" for="@Html.IdFor(model => model.DataProcessingConsent)">
				@Html.Raw(T("DataProcessingConsent.DetailText").Text.FormatWith(Url.TopicUrl("privacyinfo")))
			</label>
		</div>
		@Html.ValidationMessageFor(model => model.DataProcessingConsent)
	</div>
</div>	

@model ProductDetailsModel.GiftCardModel
@using SmartStore.Web.Models.Catalog;
@if (Model.IsGiftCard)
{
    <div class="giftcard">

        <div class="form-group">
            @Html.LabelFor(model => model.RecipientName, new { @class = "required", @for = "RecipientName" })
            @Html.TextBoxFor(model => model.RecipientName, new { @class = "form-control" })
        </div>
        
        @if (Model.GiftCardType == SmartStore.Core.Domain.Catalog.GiftCardType.Virtual)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.RecipientEmail, new { @class = "required", @for = "RecipientEmail" })
                @Html.TextBoxFor(model => model.RecipientEmail, new { @class = "form-control" })
            </div>
        }
        
        <div class="form-group">
            @Html.LabelFor(model => model.SenderName, new { @class = "required", @for = "SenderName" })
            @Html.TextBoxFor(model => model.SenderName, new { @class = "form-control" })
        </div>
        
        @if (Model.GiftCardType == SmartStore.Core.Domain.Catalog.GiftCardType.Virtual)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.SenderEmail, new { @class = "required", @for = "SenderEmail" })
                @Html.TextBoxFor(model => model.SenderEmail, new { @class = "form-control" })
            </div>
        }
        
        <div class="form-group">
            @Html.LabelFor(model => model.Message, new { @for = "Message" })
            @Html.TextAreaFor(model => model.Message, new { @class = "message form-control" })
        </div>
    </div>
}
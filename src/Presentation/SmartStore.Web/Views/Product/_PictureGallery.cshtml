@*codehint: sm-edit (new model)*@
@model ProductDetailsPictureModel
@using SmartStore.Web.Models.Catalog;
@{
	Html.AddCssFileParts(true, 
		"~/Content/smartstore.smartgallery.css", 
		"~/Content/image-gallery/css/blueimp-gallery.css",
		"~/Content/image-gallery/css/blueimp-gallery-indicator.css",
		"~/Content/image-gallery/css/blueimp-gallery-custom.css");

	Html.AddScriptParts(true, 
		"~/Content/image-gallery/js/blueimp-gallery.js",
		"~/Content/image-gallery/js/blueimp-gallery-fullscreen.js",
		"~/Content/image-gallery/js/blueimp-gallery-indicator.js",
		"~/Scripts/jquery.elevatezoom.js",
		"~/Scripts/smartstore.smartgallery.js");

    var zoomEnabled = Model.DefaultPictureZoomEnabled;
}

<div id="pd-gallery" class="picture pd-gallery">
    <div class="sg-image-wrapper">
        <img alt="@Model.DefaultPictureModel.AlternateText"
            title="@Model.DefaultPictureModel.Title"  
            src="@Model.DefaultPictureModel.ImageUrl" @Html.Attr("data-zoom-image", Model.DefaultPictureModel.FullSizeImageUrl, zoomEnabled) 
            itemprop="image" />   
        
    </div>

    <div class="sg-nav">
	    <div class="sg-thumbs">
		    <ul class="sg-thumb-list">
                @if (Model.PictureModels.Count > 1)
                {
                    for (int i = 0; i < Model.PictureModels.Count; i++)
                    {
                        var picture = Model.PictureModels[i];
                        
                        <li data-picture-id="@picture.PictureId">
							<a href="@picture.ImageUrl" @Html.Attr("data-zoom-image", picture.FullSizeImageUrl, zoomEnabled) title="@Model.Name" data-gallery="default">
								<img src="@picture.ThumbImageUrl" alt="@picture.AlternateText" title="@picture.Title" />
							</a>
                        </li>
                    }

                } 
                else 
                {     
                    <li data-picture-id="@Model.DefaultPictureModel.PictureId">
						<a href="@Model.DefaultPictureModel.ImageUrl" @Html.Attr("data-zoom-image", Model.DefaultPictureModel.FullSizeImageUrl, zoomEnabled) title="@Model.Name" data-gallery="default">
							<img src="@Model.DefaultPictureModel.ThumbImageUrl" alt="@Model.DefaultPictureModel.AlternateText" title="@Model.DefaultPictureModel.Title" />
						</a>
                    </li>
                }
            </ul>
	    </div>
	</div>
</div>
@model IList<ProductTagModel>

@using SmartStore.Web.Models.Catalog;

@{ 
	if (Model == null || Model.Count == 0)
	{
		return;
	}
}

<div class="pd-tags block">
    <div class="block-title">
        <h4>@T("Products.Tags")</h4>
    </div>
    <div class="block-body pt-3">
        @for (int i = 0; i < Model.Count; i++)
        {
            <a href="@Url.RouteUrl("ProductsByTag", new { productTagId = Model[i].Id, SeName = Model[i].SeName })" class="pd-tag">
				<span>@Model[i].Name</span> 
				<span class="pd-tag-count pl-1">@Model[i].ProductCount</span>
            </a>
        }
    </div>
</div>

@using SmartStore.Web.Framework.UI
@{
    Layout = "";

    Html.AddCssFileParts(true, "~/Plugins/ExternalAuth.Facebook/Content/facebookstyles.css");    
}
<fieldset class="oauth-login-facebook">
    <legend>@T("Plugins.ExternalAuth.Facebook.Login")</legend>
    <a href="@Url.RouteUrl("ExternalAuth.Facebook", new { ReturnUrl = HttpContext.Current.Request.QueryString["ReturnUrl"], action = "Login" })">
        <img src="@Url.Content("~/Plugins/ExternalAuth.Facebook/Content/images/oauth/facebook-logo.jpg")" alt="Facebook" class="oauth_btn facebook_large_btn" />
    </a>
</fieldset>
